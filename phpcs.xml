<?xml version="1.0"?>
<ruleset name="WP Menu Control Coding Standards">
	<rule ref="WordPress">
		<exclude name="WordPress.Files.FileName" />
	</rule>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>build/*</exclude-pattern>
    <exclude-pattern>wp-menu-control.php</exclude-pattern>

    <fileExtensions>
        <extension>php</extension>
    </fileExtensions>

    <fileset>
        <directory>./</directory>
    </fileset>
</ruleset>
